# Blood sugar levels
# Based from the symptoms:
normal_glycemic_1
    foreach
	facts.blood_sugar_risk(low)
    assert
	facts.blood_sugar(normal)

normal_glycemic_2
    foreach
	facts.blood_sugar_risk(high)
        questions.random_glucose_test(normal)
    assert
	facts.blood_sugar(normal)

hypoglycemic
    foreach
	facts.blood_sugar_risk(high)
        questions.random_glucose_test(low)
    assert
	facts.blood_sugar(low)

higher_than_normal
    foreach
	facts.blood_sugar_risk(high)
        questions.random_glucose_test(high)
    assert
	facts.blood_sugar(high)

hyperglycemic
    foreach
	facts.blood_sugar_risk(high)
        questions.random_glucose_test(veryHigh)
    assert
	facts.blood_sugar(veryHigh)

# If the blood sugar level is alarming
confirmed_diabetic
    foreach
	facts.blood_sugar_risk(high)
	facts.blood_sugar(veryHigh)
    assert
	facts.is_diabetic("Confirmed. You have diabetes.\nWe will give you insulin injections immediately.")

# Diabetic parent
diabetic_parent
    foreach
	questions.diabetic_parent(True)
    assert
	facts.parent_is_diabetic(True)

not_diabetic_parent
    foreach
	questions.diabetic_parent(False)
    assert
	facts.parent_is_diabetic(False)

# RULES
# If there are no signs of hypo/hyperglycemia
no_diabetic_risk
    foreach
	facts.blood_sugar_risk(low)
	facts.blood_sugar(normal)
	facts.parent_is_diabetic(False)
    assert
        facts.is_diabetic("No need for a blood glucose test. You should be fine.")

no_diabetic_risk_with_diabetic_parent
    foreach
	facts.blood_sugar_risk(low)
	facts.blood_sugar(normal)
	facts.parent_is_diabetic(True)
    assert
        facts.is_diabetic("No need for a blood glucose test. You should be fine.\nBe careful though. One of your parents is diabetic.")

# If blood sugar is normal
low_diabetic_risk
    foreach
	facts.blood_sugar_risk(high)
	facts.blood_sugar(normal)
	facts.parent_is_diabetic(True)
    assert
        facts.is_diabetic("Looks like your blood sugar level is OK.\nYour risk of diabetes is low.\nBe careful though. One of your parents is diabetic.")

very_low_diabetic_risk
    foreach
	facts.blood_sugar_risk(high)
	facts.blood_sugar(normal)
	facts.parent_is_diabetic(False)
    assert
        facts.is_diabetic("Your risk of diabetes is very low, despite the symptoms you have shown.\nYour blood sugar level is normal and none of your parents is diabetic.")

# If the blood sugar is high
very_high_diabetic_risk_high_glycemic
    foreach
	facts.blood_sugar(high)
	facts.parent_is_diabetic(True)
    assert
        facts.is_diabetic("I'm sorry, but you currently have prediabetes.\nYour risk of diabetes is very high!")


high_diabetic_risk_high_glycemic
    foreach
	facts.blood_sugar(high)
	facts.parent_is_diabetic(False)
    assert
        facts.is_diabetic("I'm sorry, but you currently have prediabetes.\nYour risk of diabetes is high")

# If blood sugar is low
very_high_diabetic_risk_low_glycemic
    foreach
	facts.blood_sugar(low)
	facts.parent_is_diabetic(True)
    assert
        facts.is_diabetic("I'm sorry, but you currently have prediabetes.\nYour risk of diabetes is very high!")

high_diabetic_risk_low_glycemic
    foreach
	facts.blood_sugar(low)
	facts.parent_is_diabetic(False)
    assert
        facts.is_diabetic("I'm sorry, but you currently have prediabetes.\nYour risk of diabetes is high")

